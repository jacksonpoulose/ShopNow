													})

													const data = await response.json();
													console.log("Response Data:", data); 
													if(data.success){
														discount = data.discountAmount;
														discountElem.textContent= discount.toFixed(2);
														totalElem.textContent = (subtotal-discount).toFixed(2)

													}else{
														alert(data.message)
													}

