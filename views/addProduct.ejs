        <section class="content-main">
            <form action="/admin/addproduct" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-6">
                    <div class="content-header">
                        <h2 class="content-title">Add New Product</h2>
                        <% if (typeof message !=='undefined') { %>
                                
                            <p style="color: red;"><%= message %></p>
                         
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>1. General info</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Product Name</label>
                                        <input type="text" placeholder="Type here" name="name" class="form-control" required>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <textarea placeholder="Type here" name="description" class="form-control" rows="4" required></textarea>
                                    </div>
                                     
                                </div> <!-- col.// -->
                                <div class="col-md-3">
                                    <h6> Size</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">US size</label>
                                        <input type="number" name="size" placeholder="10" class="form-control" required>
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>2. Pricing</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Cost in USD</label>
                                        <input type="number" name="price" placeholder="$00.0" class="form-control" required>
                                    </div>
                                </div> <!-- col.// -->
                                <div class="col-md-3">
                                    <h6> Discounted Pricing</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Cost in USD</label>
                                        <input type="number" name="discountPrice" placeholder="$00.0" class="form-control" required>
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>3. Category</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Category</label>
                                        <input type="text" placeholder="Type here" name="category" class="form-control" required>
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>4. Media</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Images</label>
                                        <input type="file" name="images" class="form-control" multiple required>
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- .row end// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>5. Available Stock</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Stock</label>
                                        <input type="number" placeholder="Type here" name="stock" class="form-control" required>
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                        </div>
                    </div>
                </div>
            </div>
            </div> 
            <button type="submit" class="btn btn-md rounded font-sm hover-up">Add Product</button>
            
        </form>
